<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.spelensgud.gogenieintellijplugin</id>
    <name>gogenie-intellij-plugin</name>
    <vendor>spelens-gud</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.go</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="gogenie.impl" displayType="BALLOON" isLogByDefault="true"/>
        <completion.contributor language="go"
                                implementationClass="com.github.spelensgud.gogenieintellijplugin.gogenie.lang.GogenieAnnotationCompletionContributor"/>
        <annotator language="go"
                   implementationClass="com.github.spelensgud.gogenieintellijplugin.gogenie.lang.GogenieAnnotationAnnotator"/>
        <implicitUsageProvider implementation="com.github.spelensgud.gogenieintellijplugin.gogenie.lang.GogenieImplicitUsageProvider"/>
        <psi.referenceContributor language="go"
                                 implementation="com.github.spelensgud.gogenieintellijplugin.gogenie.lang.GogenieEnumReferenceContributor"/>
        <psi.referenceContributor language="go"
                                 implementation="com.github.spelensgud.gogenieintellijplugin.gogenie.lang.GogenieHttpRouteReferenceContributor"/>
        <psi.referenceContributor language="go"
                                 implementation="com.github.spelensgud.gogenieintellijplugin.gogenie.lang.GogenieMountReferenceContributor"/>
        <codeInsight.lineMarkerProvider
                language="go"
                implementationClass="com.github.spelensgud.gogenieintellijplugin.gogenie.lang.GogenieImplLineMarkerProvider"/>
        <gotoDeclarationHandler implementation="com.github.spelensgud.gogenieintellijplugin.gogenie.lang.GogenieGotoDeclarationHandler"/>
        <toolWindow id="gogenie"
                    anchor="right"
                    secondary="true"
                    factoryClass="com.github.spelensgud.gogenieintellijplugin.gogenie.ui.GogenieConfigToolWindowFactory"/>
    </extensions>

    <actions>
        <action id="Gogenie.Db2Struct"
                class="com.github.spelensgud.gogenieintellijplugin.gogenie.action.GogenieDb2StructAction"
                text="gogenie 生成数据库模型"
                description="执行 gogenie db2struct 生成数据库模型">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
